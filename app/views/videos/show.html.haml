%article.video

  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="#{@video.large_cover_url}")
      .video_info.col-sm-3
        %header
          %h3 
            = @video.title
          %span 
            Rating: #{@video.average_rating} / 5
        %p 
          = @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for [@video, @review] do |f|
        %fieldset
          .form-group
            .row
              .col-sm-3
                = f.select :rating, ([5,4,3,2,1].map { |number| [pluralize(number, "Star")]})
          .form-group
            = f.label "Write Review"
            .row
              .col-sm-8
                = f.text_area :review_text, rows: 6, class: "form-control", hide_label: true
        %fieldset.form-group.actions.clearfix
          = f.submit "Submit" 
      %header
        %h3 
          User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span 
                  Rating: #{review.rating}/ 5
                %p 
                  by <a href="">#{review.creator.full_name}</a>
              .col-sm-8
                %p 
                  = review.review_text
                  
%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @user_videos.each do |video|
              - video_rating = @user_reviews.where(video_id: video.id).present? ? "#{@user_reviews.find(video.id).rating} Stars" : "Unrated"
              %tr
                %td
                  %input.form-control(type="text" value="1")
                %td
                  = link_to "#{video.title}", video_path(video)
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  = link_to "#{video_rating}"
                %td
                  = link_to "#{video.category.name}"
                %td
                  = link_to queue_path(video), method: :delete do
                    %i.glyphicon.glyphicon-remove
        = button_to "Update Instant Queue", nil, class: "btn btn-default"
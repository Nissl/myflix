%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, layout: :horizontal, html: {class: "form-horizontal"} ) do |f|
        %fieldset
          %header
            %h1 Register
          = f.alert_message "Please correct the following errors:"
          .form-group
            .control-label.col-sm-2
              = f.label :email, "Email Address"
            .col-sm-6
              = f.text_field :email, hide_label: true, class: "form-control"
          .form-group
            .control-label.col-sm-2
              = f.label :password, "Password"
            .col-sm-6
              = f.password_field :password, hide_label: true, class: "form-control"
          .form-group
            .control-label.col-sm-2
              = f.label :full_name, "Full Name"
            .col-sm-6
              = f.text_field :full_name, hide_label: true, class: "form-control"
          - if @invitation_token
            = hidden_field_tag(:invitation_token, @invitation_token)
          .actions.control-group
            .controls.col-sm-offset-3
              /%input(type="submit" value="Register" class="btn btn-default")
              %script.stripe-button{"data-amount" => "999", "data-description" => "Register ($9.99)", "data-image" => "/square-image.png", "data-key" => "pk_test_mkK2UJ7AR8E881nIJZwFqflD", "data-name" => "Myflix", src: "https://checkout.stripe.com/checkout.js"}